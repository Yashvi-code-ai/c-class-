#include <stdio.h>




union Data {
    int i;
    float f;
    char str[20];
};

int main() {
    union Data data;


    data.i = 10;
    printf("After assigning integer:\n");
    printf("i = %d\n", data.i);
    printf("f = %f\n", data.f);
    printf("str = %s\n\n", data.str);

    
    data.f = 220.5;
    printf("After assigning float:\n");
    printf("i = %d\n", data.i);
    printf("f = %f\n", data.f);
    printf("str = %s\n\n", data.str);


    sprintf(data.str, "Hello");
    printf("After assigning string:\n");
    printf("i = %d\n", data.i);
    printf("f = %f\n", data.f);
    printf("str = %s\n", data.str);

    return 0;
}

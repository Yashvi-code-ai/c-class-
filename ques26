#include <stdio.h>

int main() {
    char filename[100];
    char ch;
    FILE *fp;

   
    printf("Enter the filename to read: ");
    scanf("%99s", filename);

  
    fp = fopen(filename, "r");
    if (fp == NULL) {
        printf("Error: Could not open the file %s\n", filename);
        return 1;
    }

   
    printf("\n--- File Contents ---\n");
    while ((ch = fgetc(fp)) != EOF) {
        putchar(ch);
    }

    fclose(fp);
    printf("\n--- End of File ---\n");

    return 0;
}

#include <stdio.h>

int main() {
    int num, factorial = 1;

    printf("Enter a positive integer: ");
    scanf("%d", &num);

    
    if (num < 0) {
        printf("Factorial is not defined for negative numbers.\n");
        return 0;
    }

    int i = 1;

    while (i <= num) {
        factorial = factorial * i;
        i++;
    }

       printf("Factorial of %d is: %d\n", num, factorial);

    return 0;
}

#include <stdio.h>


struct Rectangle {
    int length;
    int breadth;
};


struct Rectangle inputRectangle();
int area(struct Rectangle r);

int main() {
    struct Rectangle rect;  
    
    rect = inputRectangle();

    printf("Area of the rectangle = %d\n", area(rect));

    return 0;
}
struct Rectangle inputRectangle() {
    struct Rectangle r;
    printf("Enter length: ");
    scanf("%d", &r.length);
    printf("Enter breadth: ");
    scanf("%d", &r.breadth);
    return r;
}


int area(struct Rectangle r) {
    return r.length * r.breadth;
}
